{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "lib/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "element-plus/global",
      "@sepveneto/basic-comp/global"
    ],
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "lib/Editor.vue",
    "lib/main.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
